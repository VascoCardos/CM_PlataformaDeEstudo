<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>
    <!-- Large circle at top left -->
    <item android:gravity="top|start">
        <shape android:shape="oval">
            <size android:width="180dp" android:height="180dp" />
            <gradient
                android:startColor="@color/orange_start"
                android:endColor="@color/orange_end"
                android:type="linear"
                android:angle="45" />
            <translate android:x="-60dp" android:y="-60dp" />
        </shape>
    </item>
    <!-- Small circle at top center -->
    <item android:gravity="top|center_horizontal">
        <shape android:shape="oval">
            <size android:width="60dp" android:height="60dp" />
            <gradient
                android:startColor="@color/orange_start"
                android:endColor="@color/orange_end"
                android:type="linear"
                android:angle="45" />
            <translate android:y="100dp" />
        </shape>
    </item>
    <!-- Large circle at bottom right -->
    <item android:gravity="bottom|end">
        <shape android:shape="oval">
            <size android:width="150dp" android:height="150dp" />
            <gradient
                android:startColor="@color/orange_start"
                android:endColor="@color/orange_end"
                android:type="linear"
                android:angle="45" />
            <translate android:x="30dp" android:y="30dp" />
        </shape>
    </item>
</layer-list>
